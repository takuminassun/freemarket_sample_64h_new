-# シンクルです。
.single
  .single__header
    .single__header-logo
      = image_tag src="fmarket_logo_red.svg", alt:"merukari" , height: "50px", width: "185px"
.container
  .contents
    .content-header
      %h1 新規会員登録
    .content__form-box1
      = link_to step1_signup_index_path do
        %button.mail__signup
          %i.fas.fa-envelope.mail__icon
          %p メールアドレスで登録する
      = link_to user_facebook_omniauth_authorize_path do
        %button.facebook-signup
          = icon('fab', 'facebook-square',class: "facebook-icon")
          %p Facebookで登録する
      = link_to user_google_oauth2_omniauth_authorize_path do
        %button.google-signup
          %i.fab.fa-google.google-icon
          %p Googleで登録する
= render "devise/layouts/footer"
