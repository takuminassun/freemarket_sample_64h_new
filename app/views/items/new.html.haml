.listing__wrapper
  .listing__header
    .listing__header-logo
      = image_tag src="fmarket_logo_red.svg", alt:"merukari" , height: "50px", width: "185px"
  .listing__contents
    = form_for @item do |f|
      %h2.listing__contents__info
        商品の情報を入力
      .listing__contents__image
        %h3.listing__contents__image__head
          出品画像
          %span.required-1
            必須
        %p 最大5枚までアップロードできます
        .drop__box__container
          .prev-content
          .lavel-content
            %label{for: "item_images_attributes_0_image", class: "label-box", id: "label-box--0"}
              %pre.label-box__text-visible クリックしてファイルをアップロード
          .hiddne-content
            = f.fields_for :images do |i|
              = i.file_field :image, class: "hidden-field"
              %input{class:"hidden-field", type: "file", name: "item[images_attirbutes][1][image]", id: "item_images_attributes_1_image"}
              %input{class:"hidden-field", type: "file", name: "item[images_attirbutes][2][image]", id: "item_images_attributes_2_image"}
              %input{class:"hidden-field", type: "file", name: "item[images_attirbutes][3][image]", id: "item_images_attributes_3_image"}
              %input{class:"hidden-field", type: "file", name: "item[images_attirbutes][4][image]", id: "item_images_attributes_4_image"}



      -# .listing__contents__info
